line_ending: lf
doublestar: false
continue_on_error: false
include: []
exclude: ["cspell.config.yaml", ".pre-commit-config.yaml"]
extensions: [".yaml", ".yml"]

formatter:
  type: basic
  indent: 2
  include_document_start: true
  line_ending: lf
  retain_line_breaks: true
  disallow_anchors: false
  max_line_length: 0
  scan_folded_as_literal: true
  indentless_arrays: false
  drop_merge_tag: false
  pad_line_comments: 1
